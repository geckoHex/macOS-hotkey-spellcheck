{
  "name": "spellcheck",
  "version": "2.1.2",
  "description": "A modern, hotkey accessible spelling helper for macOS.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "spellchecker",
    "dictionary"
  ],
  "author": "Gecko",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dictionary-en": "^4.0.0",
    "nspell": "^2.1.5"
  },
  "build": {
    "appId": "com.geckohex.spellcheck",
    "productName": "Spellcheck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**/*"
    ],
    "asarUnpack": [
      "assets/**/*",
      "node_modules/dictionary-en/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "mac": {
      "icon": "assets/AppIcon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "title": "Spellcheck",
      "background": "assets/dmg-background.png",
      "iconSize": 64,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 480,
          "y": 138,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 100,
          "y": 138,
          "type": "file"
        }
      ]
    }
  }
}
